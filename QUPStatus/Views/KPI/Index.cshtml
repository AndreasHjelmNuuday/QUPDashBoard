@using DotJira;
@using Newtonsoft.Json; 
@model QUPViewModel;

<script>

    function createGraph(key, labels, realized, budgets, chartType){
         ctx = document.getElementById(key).getContext('2d');
                    myChart = new Chart(ctx, {
                            type: chartType,
                        data: {
                            labels: labels,

                            datasets: [{
                        label: ['Realized'],
                                    data:  realized,
                                    backgroundColor: [
                                        'rgba(99, 255, 132, 0.2)'
                                    ],
                                    borderColor: [
                                        'rgba(99, 255, 132, 1)',
                                    ],
                                    borderWidth: 1
                                },

                                {
                        label: ['Budget'],
                                    data:  budgets,
                                    backgroundColor: [
                                        'rgba(173,216,230, 0.2)'
                                    ],
                                    borderColor: [
                                        'rgba(173,216,230, 1)',
                                    ],

                                    borderWidth: 1
                                },]
                            },
                            options: {
                    scales: {
                        y: {
                            beginAtZero: false
                           }
                        }
                    }
                    });

    }

</script>

<script>
    //refresh every minute
    function timedRefresh(timeoutPeriod) {
        setTimeout("location.reload(true);", timeoutPeriod);
    }

    window.onload = timedRefresh(60000);

</script>
<div style="margin-left:20px; position: absolute; top:40px; left:20px;">
    @foreach (Issue parent in Model.Issues)
    {
    <div style="position: relative; height: 300px; float:left; border: 0px solid lightgrey;">
        <div style="overflow-wrap: break-word; writing-mode: vertical-rl; text-align:center; float: left; background-color:#@parent.Fields.KeyResult1; color: #@parent.Fields.KeyResult2; width:50px; height:100%; "><b style="margin: auto;">@parent.Fields.Summary</b></div>
        
            @foreach (Issue child in parent.Children)
            {
                <div style=" padding-right: 20px; padding-left:20px; position: relative; float: left;max-width:fit-content()">
                    <div style="height:100px; max-width: 300px; overflow-wrap: break-word;"><a href="https://jira.tdc.dk/browse/@child.Key" style="color: black; ">@child.Fields.Summary</a></div>
                    <div style="width: 350px; height: fit-content(); ">
                        <canvas id="@child.Key"></canvas>
                    </div>
                    @{
                        string chartType = "'bar'";
                    }
                    <script>
                        createGraph("@child.Key", @Html.Raw(child.KPIs.LabelsJSON), @Html.Raw(child.KPIs.RealizedJSON),@Html.Raw(child.KPIs.BudgetsJSON),@Html.Raw(chartType));
                    </script>
                </div>
            }
        
    </div><br />
    }
</div> 