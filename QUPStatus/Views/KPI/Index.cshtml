@using DotJira;
@model QUPViewModel;

<div style="max-width: 400px; max-height: 400px">


    @foreach (Issue parent in Model.Issues)
    {
        <a>@parent.Fields.Summary;</a>
        foreach (Issue child in parent.Children)
        {
            <a>@child.Fields.Summary;</a>
        }
    }

    @{
        String jan = "January";
    }
    <canvas id="myChart" width="400" height="400"></canvas>
    <script>
const ctx = document.getElementById('myChart').getContext('2d');
const myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['@jan', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
        datasets: [{
            label: ['Realized'],
            data: [12, 19, 3, 5, 2, 3, 5, 5, 5, 5, 5, 5],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
            ],
            borderWidth: 1
        },

            {
                label: ['budget'],
                data: [12, 19, 3, 5, 2, 3, 5, 5, 5, 5, 5, 5],
                backgroundColor: [
                    'rgba(99, 255, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(99, 255, 132, 1)',
                ],
                borderWidth: 1
            },]
    },
    options: {
        scales: {
            y: {
                beginAtZero: false
            }
        }
    }
});
    </script>

</div>